{
  "name": "taskmatrix-pro-firefox",
  "version": "1.0.0",
  "description": "基于艾森豪威尔矩阵的Firefox任务管理插件",
  "main": "background/background.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:firefox": "npm run clean && npm run build && npm run package:firefox",
    "dev": "webpack --mode development --watch",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "clean": "rm -rf dist",
    "package": "npm run clean && npm run build && zip -r taskmatrix-pro-firefox.zip dist/",
    "package:firefox": "cd dist && zip -r ../taskmatrix-pro-firefox.xpi *"
  },
  "keywords": [
    "firefox-extension",
    "firefox-addon",
    "task-management",
    "eisenhower-matrix",
    "productivity",
    "time-management"
  ],
  "author": "TaskMatrix Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.50.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.0.3",
    "style-loader": "^3.3.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "d3": "^7.9.0",
    "date-fns": "^2.30.0"
  },
  "browserslist": [
    "Firefox >= 78"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
